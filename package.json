{
  "name": "attack-map-backend",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon --watch src --exec node src/server.js",
    "dev:demo": "DEMO_MODE=true nodemon --watch src --exec node src/server.js",
    "frontend": "cd frontend && npm start",
    "frontend:build": "cd frontend && npm run build",
    "dev:full": "concurrently \"npm run dev\" \"npm run frontend\"",
    "dev:demo:full": "concurrently \"npm run dev:demo\" \"npm run frontend\""
  },
  "dependencies": {
    "@elastic/elasticsearch": "^8.9.0",
    "concurrently": "^8.2.2",
    "dotenv": "^16.6.1",
    "express": "^4.18.2",
    "pino": "^8.0.0",
    "touch": "^3.1.1",
    "ws": "^8.13.0"
  },
  "devDependencies": {
    "nodemon": "^3.1.10"
  }
}
